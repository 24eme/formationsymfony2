{% extends 'base.html.twig' %}

{% block title %}Coupe d'Europe de football 2016{% endblock %}

{% block body %}

    <h2>Liste des pronostics pour le match
        {{app.request.get('idRencontre')}}</h2>



    {% if pronostics is not empty %}
        <h3>
            {% if pronostics[0].rencontre.equipeA %}
                <a href="{{ path('equipe_route', {'team':pronostics[0].rencontre.equipeA}) }}">{{pronostics[0].rencontre.equipeA}}</a>
            {% endif %}
            -
            {% if pronostics[0].rencontre.equipeB %}
                <a href="{{ path('equipe_route', {'team':pronostics[0].rencontre.equipeB}) }}">{{pronostics[0].rencontre.equipeB}}</a>
            {% endif %}
        </h3>
        <br/>

        <table class="table">
            <thead>
                <tr>
                    <th>Date du pronostic</th>
                    <th>Utilisateur</th>
                    <th>Score a</th>
                    <th>Score b</th>
                </tr>
            </thead>
            <tbody>
                {% for entry in pronostics %}
                    <tr>
                        <td>{{entry.date | date('d/m/Y')}}</td>
                        <td>{{entry.utilisateur}}</td>
                        <td>{{entry.scoreA}}</td>
                        <td>{{entry.scoreB}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {% if pronostics is empty %}
        Aucun pronostic n'a été fait pour ce match !
    {% endif %}

    <p>
        <a href="{{ path('match_route') }}">Retour à la page de tous les matchs</a>
    </p>

{% endblock %}
